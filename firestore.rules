rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles
      allow read: if true;
      // Only the user can create/update their own profile
      allow create, update: if isOwner(userId);
      // Only the user can delete their own profile
      allow delete: if isOwner(userId);
    }
    
    // Properties collection
    match /properties/{propertyId} {
      // Anyone can read properties (for browsing/searching)
      allow read: if true;
      
      // Only authenticated users can create properties
      allow create: if isAuthenticated() 
                    && request.resource.data.seller.id == request.auth.uid;
      
      // Only the property owner can update their property
      allow update: if isAuthenticated() 
                    && resource.data.seller.id == request.auth.uid;
      
      // Only the property owner can delete their property
      allow delete: if isAuthenticated() 
                    && resource.data.seller.id == request.auth.uid;
    }
    
    // Chat messages collection
    match /chats/{messageId} {
      // Users can read messages where they are sender or receiver
      allow read: if isAuthenticated() 
                  && (resource.data.from == request.auth.uid || resource.data.to == request.auth.uid);
      
      // Users can create messages where they are the sender
      allow create: if isAuthenticated() 
                    && request.resource.data.from == request.auth.uid;
      
      // Users can update their own messages (e.g., mark as read)
      allow update: if isAuthenticated() 
                    && (resource.data.from == request.auth.uid || resource.data.to == request.auth.uid);
      
      // Users can delete their own sent messages
      allow delete: if isAuthenticated() 
                    && resource.data.from == request.auth.uid;
    }
    
    // Conversations collection
    match /conversations/{conversationId} {
      // Users can read conversations they are part of
      allow read: if isAuthenticated() 
                  && request.auth.uid in resource.data.participants;
      
      // Users can create conversations they are part of
      allow create: if isAuthenticated() 
                    && request.auth.uid in request.resource.data.participants;
      
      // Participants can update conversation metadata
      // Check both resource (existing) and request.resource (new) for participants
      allow update: if isAuthenticated() 
                    && (request.auth.uid in resource.data.participants 
                        || request.auth.uid in request.resource.data.participants);
      
      // No one can delete conversations (keep message history)
      allow delete: if false;
    }
    
    // Property Leads collection
    match /property_leads/{leadId} {
      // Allow authenticated users to check if a lead exists (for their own interest check)
      // Sellers can read leads for their properties
      // Users can read their own leads
      allow read: if isAuthenticated() 
                  && (resource == null 
                      || resource.data.sellerId == request.auth.uid 
                      || resource.data.userId == request.auth.uid);
      
      // Authenticated users can express interest (create lead)
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid;
      
      // Only sellers can update lead status
      allow update: if isAuthenticated() 
                    && resource.data.sellerId == request.auth.uid;
      
      // Only sellers can delete leads
      allow delete: if isAuthenticated() 
                    && resource.data.sellerId == request.auth.uid;
    }
    
    // AI Queries collection
    match /ai_queries/{queryId} {
      // Users can read their own queries
      allow read: if isAuthenticated() 
                  && resource.data.userId == request.auth.uid;
      
      // Users can create their own queries
      allow create: if isAuthenticated() 
                    && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own queries
      allow update: if isAuthenticated() 
                    && resource.data.userId == request.auth.uid;
      
      // Users can delete their own queries
      allow delete: if isAuthenticated() 
                    && resource.data.userId == request.auth.uid;
    }
    
    // AI Property Chats collection
    match /ai_property_chats/{chatId} {
      // Anyone can read AI chats (for analytics)
      allow read: if true;
      
      // Authenticated users can create chats
      allow create: if isAuthenticated();
      
      // Users can update their own chat sessions
      allow update: if isAuthenticated();
      
      // No deletion of chat history
      allow delete: if false;
    }
    
    // User Favorites collection
    match /userFavorites/{userId} {
      // Only the owner can read their favorites
      allow read: if isOwner(userId);
      
      // Only the owner can create/update their favorites
      allow create, update: if isOwner(userId);
      
      // Only the owner can delete their favorites
      allow delete: if isOwner(userId);
    }
  }
}
